{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "baseUrl": "./src",
    "paths": {
      "@aaman/main/*": [
        "app/admin/*",
        "app/components/*",
        "app/guards/*",
        "app/validators/*",
        "app/services/*",
        "app/models/*"
      ],
      "@aaman/accounts/*": ["app/accounts/*"],
      "@aaman/couser/*": ["app/co-users/*"],
      "@aaman/dir/*": ["app/directory/*"],
      "@aaman/invoice/*": ["app/invoice/*"],
      "@aaman/ratecard/*": ["app/rate-card/*"],
      "@aaman/receipts/*": ["app/receipts/*"],
      "@aaman/releaseorder/*": ["app/release-order/*"],
      "@aaman/superadmin/*": ["app/super-admin/*"]
    },
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
